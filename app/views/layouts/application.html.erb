<!DOCTYPE html>
<html>
<head>
  <title>SimpleBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
	  <div class="navbar-header">
	    <%= link_to "all posts", posts_path, class: "navbar-brand" %>
	    <%= link_to "my posts", posts_path(my: "true"), class: "navbar-brand" %>
	  </div>
	  <ul class="nav navbar-nav navbar-right">
	  	<% if user_signed_in? %>
		  <li>
	        <%= link_to "Settings", edit_user_registration_path %>
	      </li>
	      <li>
	        <%= link_to "Sing out", destroy_user_session_path, method: :delete %>
	      </li>
	    <% else %>
	  	  <li>
	        <%= link_to "Sing up", new_user_registration_path %>
	      </li>
	      <li>
	        <%= link_to "Sing in", new_user_session_path %>
	      </li>
	    <% end %>
	  </ul>

	</div>
  </nav>

  <div class="container">
	  <%= yield %>
  </div>
</body>
</html>
